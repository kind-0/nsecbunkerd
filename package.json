    "@prisma/client": "^5.4.1",
    "@scure/base": "^1.1.1",
    "@types/yargs": "^17.0.24",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "crypto-js": "^4.2.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eventemitter3": "^5.0.1",
